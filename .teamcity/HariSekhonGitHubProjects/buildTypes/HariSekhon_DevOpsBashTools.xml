<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" uuid="e5abcae2-bee5-41c8-9e43-33ccfd28178c" xsi:noNamespaceSchemaLocation="https://www.jetbrains.com/teamcity/schemas/2020.1/project-config.xsd">
  <name>DevOps Bash tools</name>
  <description>DevOps Bash Scripts - AWS, GCP, Kubernetes, Kafka, Docker, APIs, Hadoop, SQL, PostgreSQL, MySQL, Hive, Impala, Travis CI, Jenkins, Concourse, GitHub, GitLab, BitBucket, Azure DevOps, Spotify, MP3, LDAP, Code/Build Linting, package management for Linux, Mac</description>
  <settings ref="HariSekhon_Make">
    <options>
      <option name="branchFilter" value="" />
    </options>
    <parameters />
    <build-runners order="RUNNER_3, RUNNER_1, RUNNER_2">
      <runner id="RUNNER_3" name="CI Bootstrap" type="simpleRunner">
        <parameters>
          <param name="script.content" value="setup/ci_bootstrap.sh" />
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner id="RUNNER_1" name="Make" type="simpleRunner">
        <parameters>
          <param name="plugin.docker.imagePlatform" value="linux" />
          <param name="script.content" value="make" />
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="HariSekhon_HttpsGithubComHariSekhonDevOpsBashTools" />
    </vcs-settings>
    <requirements />
    <build-triggers>
      <build-trigger id="vcsTrigger" type="vcsTrigger">
        <parameters>
          <param name="branchFilter" value="+:refs/heads/master" />
          <param name="enableQueueOptimization" value="true" />
          <param name="quietPeriodMode" value="DO_NOT_USE" />
        </parameters>
      </build-trigger>
    </build-triggers>
    <cleanup />
  </settings>
</build-type>

